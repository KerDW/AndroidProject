<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/timerTV2"
        android:layout_width="147dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="Seconds remaining: "
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeLeftInfo"
        android:layout_width="261dp"
        android:layout_height="114dp"
        android:text="You've got {seconds} seconds left, press start to begin the second game."
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="411dp"
        android:layout_height="614dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/beginGame"
        android:layout_width="146dp"
        android:layout_height="54dp"
        android:layout_marginEnd="264dp"
        android:layout_marginRight="264dp"
        android:onClick="beginGameTwo"
        android:backgroundTint="@color/colorSecondary"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerTV2" />
</androidx.constraintlayout.widget.ConstraintLayout>